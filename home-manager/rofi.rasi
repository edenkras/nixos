configuration {
        font: "Fira Code 14";
        location: 0;
        yoffset: 0;
        xoffset: 0;
        show-icons: true;
        ssh-command: "{terminal} {ssh-client} {host} [-p {port}]";
  timeout {
      action: "kb-cancel";
      delay:  0;
  }
  filebrowser {
      directories-first: true;
      sorting-method:    "name";
  }
}